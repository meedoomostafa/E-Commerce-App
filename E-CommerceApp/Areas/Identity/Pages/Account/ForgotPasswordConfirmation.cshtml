@page
@model E_CommerceApp.Areas.Identity.Pages.Account.ForgotPasswordConfirmation

@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h4 class="card-title">Email Sent</h4>
                    <hr />
                    <p>If an account exists with the email you provided, you will receive a password reset link. Please check your email (and spam/junk folder).</p>
                    <a asp-page="./Login" class="btn btn-primary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>