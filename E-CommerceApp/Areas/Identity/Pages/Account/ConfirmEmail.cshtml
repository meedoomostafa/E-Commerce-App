@page
@model E_CommerceApp.Areas.Identity.Pages.Account.ConfirmEmailModel

@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h4 class="card-title">Email Confirmation</h4>
                    <hr />
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert @(Model.StatusMessage.Contains("Error") ? "alert-danger" : "alert-success")" role="alert">
                            @Model.StatusMessage
                        </div>
                    }
                    <a asp-page="./Login" class="btn btn-primary">Log in</a>
                </div>
            </div>
        </div>
    </div>
</div>