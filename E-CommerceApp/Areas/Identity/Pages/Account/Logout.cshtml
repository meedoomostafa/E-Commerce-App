@page
@model E_CommerceApp.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">@ViewData["Title"]</h2>
                    
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="mb-4">
                                <p>Are you sure you want to log out?</p>
                            </div>
                            
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-box-arrow-right me-2"></i>Yes, Log me out
                                </button>
                                <a href="/" class="btn btn-outline-secondary ms-2">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-success mb-4" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>You have successfully logged out of the application.
                            </div>
                            
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-house-door me-2"></i>Return to Home
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Log in again
                            </a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>