@page
@model E_CommerceApp.Areas.Identity.Pages.Account.RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">Create a new account</h4>
                    <hr />
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                        
                        <div class="row">
                            <!-- Account Information -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Account Information</h5>
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label"></label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label"></label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Role" class="form-label">Continue as:</label>
                                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select"></select>
                                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <!-- Personal Information -->
                            <div class="col-md-6">
                                <h5 class="mb-3">Personal Information</h5>
                                <div class="mb-3">
                                    <label asp-for="Input.FirstName" class="form-label"></label>
                                    <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" placeholder="First Name" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.LastName" class="form-label"></label>
                                    <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" placeholder="Last Name" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" placeholder="Phone Number" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Address Information -->
                        <h5 class="mt-4 mb-3">Address Information</h5>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Input.Address" class="form-label"></label>
                                <input asp-for="Input.Address" class="form-control" placeholder="Street Address" />
                                <span asp-validation-for="Input.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.City" class="form-label"></label>
                                <input asp-for="Input.City" class="form-control" placeholder="City" />
                                <span asp-validation-for="Input.City" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.State" class="form-label"></label>
                                <input asp-for="Input.State" class="form-control" placeholder="State/Province" />
                                <span asp-validation-for="Input.State" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.ZipCode" class="form-label"></label>
                                <input asp-for="Input.ZipCode" class="form-control" placeholder="Zip/Postal Code" />
                                <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Country" class="form-label"></label>
                                <input asp-for="Input.Country" class="form-control" placeholder="Country" />
                                <span asp-validation-for="Input.Country" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-outline-secondary">Already have an account?</a>
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- External Login Section -->
            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="card shadow-sm mt-4">
                    <div class="card-body">
                        <h4 class="card-title text-center">Use another service to register</h4>
                        <hr />
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="text-center">
                            <div>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary m-1" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}