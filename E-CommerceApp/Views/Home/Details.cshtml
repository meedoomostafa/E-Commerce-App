@model App.Models.Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Product Details</h2>

    @if (Model == null)
    {
        <div class="alert alert-danger text-center">
            Product not found!
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Product Image -->
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name" style="max-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/placeholder.jpg" class="img-fluid rounded" alt="Placeholder" style="max-height: 400px; object-fit: cover;" />
                    }
                </div>

                <!-- Product Details -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                        <p class="card-text"><strong>Price:</strong> $@Model.Price.ToString("c")</p>
                        <p class="card-text"><strong>Stock:</strong> @Model.Stock</p>
                        <p class="card-text"><strong>Category:</strong> @(Model.Category?.Name ?? "No Category")</p>
                    </div>
                </div>

                <!-- User Reviews Section (Placeholder) -->
                <div class="mt-4">
                    <h5>User Reviews</h5>
                    <div class="alert alert-info">
                        No reviews yet. Be the first to review this product!
                    </div>
                </div>

                <!-- Back Button -->
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to Products</a>
                </div>
            </div>
        </div>
    }
</div>