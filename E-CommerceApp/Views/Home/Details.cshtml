@model Product

@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <h2 class="text-center mb-5">Product Details</h2>

    @if (Model == null)
    {
        <div class="alert alert-danger text-center">
            Product not found!
        </div>
    }
    else
    {
        @if (TempData["SuccessFavorite"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessFavorite"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-8">

                <!-- Product Image -->
                <div class="text-center mb-4">
                    <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/placeholder.jpg")"
                         alt="@Model.Name"
                         class="img-fluid rounded-4 shadow-sm"
                         style="max-height: 400px; object-fit: cover;" />
                </div>

                <!-- Product Details Card -->
                <div class="card shadow-sm rounded-4 mb-4">
                    <div class="card-body">
                        <h3 class="card-title mb-4">@Model.Name</h3>

                        <p><strong>Description:</strong> @Model.Description</p>
                        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                        <p><strong>Stock:</strong> @Model.Stock</p>
                        <p><strong>Category:</strong> @(Model.Category?.Name ?? "No Category")</p>

                        <!-- Actions Section -->
                        <div class="d-flex flex-column align-items-center gap-3 mt-4">
                            @if (Model.Stock > 0)
                            {
                                <form asp-action="AddToCart" method="post" class="w-100 text-center">
                                    <input type="hidden" name="productId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-primary px-4">
                                        <i class="fas fa-cart-plus me-2"></i> Add to Cart
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-warning text-center w-100">
                                    Out of Stock
                                </div>
                            }

                            <!-- Favorite Button -->
                            <form id="favoriteForm" asp-area="Customer" asp-controller="Cart" asp-action="ToggleFavorite" method="post" class="text-center">
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />

                                <button id="favoriteButton" type="submit" class="btn btn-link text-decoration-none p-0">
                                    <i id="heartIcon" class="fas fa-heart text-muted fs-2"></i>
                                    <span id="favoriteText" class="ms-2">Add to Favorites</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- User Reviews Section -->
                <div class="card shadow-sm rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">User Reviews</h5>
                        <div class="alert alert-info mb-0">
                            No reviews yet. Be the first to review this product!
                        </div>
                    </div>
                </div>

                <!-- Back Button -->
                <div class="text-center mt-3">
                    <a asp-action="Index" class="btn btn-secondary px-5 py-2 rounded-3">Back to Products</a>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    <!-- JQuery Favorite AJAX -->
    <script>
            $(document).ready(function () {
            var productId = $('input[name="productId"]').val();

            // عند تحميل الصفحة، تحقق من حالة الفيفوريت من localStorage
            if (localStorage.getItem('favorite_' + productId) === 'true') {
            $('#heartIcon').removeClass('text-muted').addClass('text-danger');
            $('#favoriteText').text('Remove from Favorites');
        } else {
            $('#heartIcon').removeClass('text-danger').addClass('text-muted');
            $('#favoriteText').text('Add to Favorites');
        }

            $('#favoriteForm').on('submit', function (e) {
            e.preventDefault();

            var form = $(this);
            var formData = form.serialize();
            var heartIcon = $('#heartIcon');
            var favoriteText = $('#favoriteText');

            // تحقق من حالة الفيفوريت الحالية في localStorage
            var isFavorited = localStorage.getItem('favorite_' + productId) === 'false';

            // عكس الحالة وحفظها في localStorage
            if (isFavorited) {
            localStorage.setItem('favorite_' + productId, 'true');
            heartIcon.removeClass('text-muted').addClass('text-danger');
            favoriteText.text('Remove from Favorites');
        } else {
            localStorage.setItem('favorite_' + productId, 'false');
            heartIcon.removeClass('text-danger').addClass('text-muted');
            favoriteText.text('Add to Favorites');
        }
            // إرسال البيانات إلى السيرفر عبر AJAX
            $.ajax({
            url: '/Customer/Cart/ToggleFavorite', // المسار الصحيح للـ action داخل الـ area
            method: 'POST',
            data: formData,  // البيانات المرسلة (الـ productId وغيره)
            success: function (response) {
            // استجابة السيرفر
            console.log('Response:', response);
            },
            error: function (xhr, status, error) {
            console.error('Error:', error);
            alert('An error occurred while updating your favorite list.');
        }
        });

            // إضافة تأثير الأنيميشن
            heartIcon.addClass('animate__animated animate__heartBeat');
            setTimeout(function () {
            heartIcon.removeClass('animate__animated animate__heartBeat');
        }, 1000);
        });
        });
    </script>

}
