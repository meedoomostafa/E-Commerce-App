@model E_CommerceApp.Models.ErrorViewModel

@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-danger">An Error Occurred</h2>

    <div class="card shadow-sm">
        <div class="card-body text-center">
            <p>Sorry, an unexpected error occurred while processing your request.</p>
            @if (Model.ShowRequestId)
            {
                <p><strong>Request ID:</strong> @Model.RequestId</p>
            }
            <p>Please try again later or contact support if the issue persists.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>